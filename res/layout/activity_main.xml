<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.fenceposts.appquest.schrittzaehler.MainActivity" >

    <Button
        android:id="@+id/buttonReadQrCodeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="readQrCodeStart"
        android:text="@string/read_qr_code_start" />

    <Button
        android:id="@+id/buttonReadQrCodeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonReadQrCodeStart"
        android:layout_below="@+id/buttonReadQrCodeStart"
        android:onClick="readQrCodeEnd"
        android:text="@string/read_qr_code_end" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonReadQrCodeEnd"
        android:layout_below="@+id/buttonReadQrCodeEnd"
        android:onClick="startActivityWalk"
        android:text="@string/start_activity_walk" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_below="@+id/button2"
        android:onClick="startActivityTurn"
        android:text="@string/start_activity_turn" />

</RelativeLayout>